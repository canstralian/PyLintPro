# Environment Configuration for Mendicant AI
# Copy this file to .env and configure your values

# Database Configuration
DATABASE_URL=postgresql://mendicant:password@localhost:5432/mendicant_dev
REDIS_URL=redis://localhost:6379/0

# GitHub App Configuration
GITHUB_APP_ID=your_app_id_here
GITHUB_PRIVATE_KEY_PATH=path/to/private-key.pem
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# API Configuration
SECRET_KEY=your_secret_key_here
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring & Observability
OPENTELEMETRY_ENDPOINT=http://localhost:4317
SENTRY_DSN=your_sentry_dsn_here

# Pilot Program Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
PILOT_PRICE_ID=price_your_pilot_price_id

# External Services
SECURITY_SCANNER_API_KEY=your_security_api_key